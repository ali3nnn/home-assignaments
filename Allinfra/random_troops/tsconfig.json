{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "target": "ES2017",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "jest",
            "node"
        ]
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}