{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es2021", "dom"],
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist/",
      "listFiles": true,
      "noEmitHelpers": false,
      "alwaysStrict": true,
      "suppressImplicitAnyIndexErrors": false,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "allowJs": true,
      "diagnostics": true,
      "types": [],
      "allowSyntheticDefaultImports": true
   },
   "include": [
      "src/**/*",
      "test/**/*",
   ],
   "exclude": [
      // "jest.config.js",
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts"
   ],
   "compileOnSave": false
}